<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_forecast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_forecast"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/Monday"
            android:textSize="15sp"
            android:textAlignment="center"
            android:gravity="center"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/partly_cloudy"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/partly_cloudy"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/temperature"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/Tuesday"
            android:textAlignment="center"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/storm"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/thunderstorms"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/temperature"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/Wednesday"
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/chance_of_storm"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/showers"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/temperature"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/Thursday"
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/rain"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/scattered_showers"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/temperature"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/Friday"
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/clouds"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/mostly_cloudy"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/temperature"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/Saturday"
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/partly_cloudy"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/partly_cloudy"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/temperature"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="@string/Sunday"
            android:textAlignment="center"
            android:textSize="15sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/partly_cloudy"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/partly_cloudy"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/temperature"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>